<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:background="@color/LightBeige"
    android:layout_height="match_parent"
    tools:context=".HostelsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/LightBeige">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Campus Hostels"
                        android:textColor="@color/DarkBlue"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_marginTop="13dp"/>

                </RelativeLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnOrderPreserved="false"
                    android:alignmentMode="alignMargins"
                    android:rowCount="1"
                    android:columnCount="2"
                    android:layout_marginTop="17dp">

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:id="@+id/tumaini_card"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/Orange"
                        android:layout_rowWeight="1"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:clickable="true"
                                android:src="@drawable/logo1" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Tumaini Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/delvic_card"
                        app:cardBackgroundColor="@color/Orange"
                        android:layout_rowWeight="1"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo2"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Delvic Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/ebenezer_card"
                        app:cardBackgroundColor="@color/Orange"
                        android:layout_rowWeight="1"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Ebenezer Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/Orange"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/peka_card"
                        android:layout_rowWeight="1"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo4"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Peka Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        android:id="@+id/hidaya_card"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/Orange"
                        android:layout_rowWeight="1"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo5"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Hidaya Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        android:id="@+id/elshadai_card"
                        app:cardBackgroundColor="@color/Orange"
                        android:layout_rowWeight="1"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo7"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Elshadai Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/Orange"
                        android:layout_rowWeight="1"
                        android:id="@+id/euvics_card"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo8"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Euvics Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/dominion_card"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        android:layout_rowWeight="1"
                        app:cardBackgroundColor="@color/Orange"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo9"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Dominion Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardBackgroundColor="@color/Orange"
                        app:cardCornerRadius="12dp"
                        android:layout_rowWeight="1"
                        android:id="@+id/majaliwa_card"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo3"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Majaliwa Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_columnWeight="1"
                        app:cardCornerRadius="12dp"
                        app:cardBackgroundColor="@color/Orange"
                        android:layout_rowWeight="1"
                        android:id="@+id/pasisi_card"
                        android:elevation="60dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:layout_gravity="center">

                            <ImageView
                                android:layout_width="60dp"
                                android:layout_height="80dp"
                                android:clickable="true"
                                android:layout_gravity="center"
                                android:src="@drawable/logo7"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Pasisi Hostels"
                                android:textStyle="bold"
                                android:textColor="@color/DarkBlue"
                                android:textSize="13dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
